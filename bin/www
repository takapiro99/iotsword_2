//dim[0]("#ee0012");
//ってやったら自動で0番のdimが始まる。他のやつが来たり0になったらbreakしなければならない。
function chain(rgb){
  console.log("hello " + rgb)
  const p = new Promise((resolve, reject) => {
    //emitting(rgb[3],rgb2hex(rgb[0],rgb[1],rgb[2]));
    setTimeout(function(){
      emitting(rgb[3],rgb2hex(rgb[0],rgb[1],rgb[2]));
      if(info[rgb[3]]==true){info[rgb[3]]=false;active[rgb[3]]=false;console.log("one");reject();}
      if(rgb[0]==0&&rgb[1]==0&&rgb[2]==0){console.log("two");reject();}
      if(rgb[0]<30){rgb[0]=0}else{rgb[0]-=30}
      if(rgb[1]<30){rgb[1]=0}else{rgb[1]-=30}
      if(rgb[2]<30){rgb[2]=0}else{rgb[2]-=30}
      resolve(rgb)
    },rgb[4],rgb);
  });
  return p
}

function emitting(i,color){
  io.sockets.emit(i,color);
}

function dim(i,color,delay){
  let rgb = [];
  let piece = hex2rgb(color);
  rgb[0] = piece[0];
  rgb[1] = piece[1];
  rgb[2] = piece[2];
  rgb[3] = i;
  rgb[4] = delay
  emitting(rgb[3],rgb2hex(rgb[0],rgb[1],rgb[2]));
  //active[i]=true;
  setTimeout(function(){info[i]=false;},700)
  chain(rgb)
      .then((rgb)=>chain(rgb))
      .then((rgb)=>chain(rgb))
      .then((rgb)=>chain(rgb))
      .then((rgb)=>chain(rgb))
      .then((rgb)=>chain(rgb))
      .then((rgb)=>chain(rgb))
      .then((rgb)=>chain(rgb))
      .then((rgb)=>chain(rgb)).catch(()=>{console.log("stopped")});
}

let info = []
let active = []
for(let i=0;i<10;i++){info[i]=false;active[i]=false;}

  

// when socket.io starts, below
io.on("connection",(socket)=>{
  console.log("made socket connection",socket.id);
  // on "chat", emits data and console log it.
  socket.on("chat",(data)=>{
      io.sockets.emit("chat",data);
      console.log(data);
  });
  // for each cells listens to "<int>" and braodcast the data.
  for(let i=0;i<lednum;i++){
    socket.on(String(i),(color)=>{ // 情報が来たら
      console.log(i, color); 
      if(active[i]==true){
        console.log("three");info[i]=true;dim(i,color,500);
      }else{
        active[i]=true;
        dim(i,color,500);
      }
      //dim(i,color,100);//info[i]=true;
      
      //　もし dim しているやつがいれば止める  if(dim){stop;}
      // dim していく  dim(); (各dimでemitし続ける)
      //socket.broadcast.emit(String(i),color); //broadcast to everyone
      
    })
  }
  //socket.on("typing",function(data){
  //    socket.broadcast.emit("typing",data)
  //})
}); 



